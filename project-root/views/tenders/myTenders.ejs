<div class="container mt-4">
  <h2> Moje przetargi</h2>
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>#</th>
        <th>Tytuł</th>
        <th>Start</th>
        <th>Konie</th>
        <th>Budżet</th>
      </tr>
    </thead>
    <tbody>
      <% tenders.forEach((tender, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><a href="/tenders/<%= tender.id %>"><%= tender.title %></a></td>
          <td><%= new Date(tender.start_time).toLocaleString() %></td>
          <td><%= new Date(tender.end_time).toLocaleString() %></td>
          <td><%= tender.max_budget %> PLN</td>
        </tr>
      <% }) %>
      <% if (tenders.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center">Brak przetargów</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>"